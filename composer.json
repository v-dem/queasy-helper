{
    "name": "v-dem/queasy-helper",
    "description": "Helper functions, part of QuEasy PHP Framework",
    "homepage": "https://github.com/v-dem/queasy-helper/",
    "keywords": ["php", "helper", "queasy", "queasy-framework", "framework"],
    "license": "LGPL-3.0-only",
    "minimum-stability": "dev",
    "version": "1.1.1",
    "authors": [
        {
            "name": "Vitaly Demyanenko",
            "email": "vitaly_demyanenko@yahoo.com"
        }
    ],
    "config": {
        "preferred-install": "dist"
    },
    "require": {
        "php": ">=5.3.0"
    },
    "require-dev": {
        "php": ">=7.1.0",
        "phpunit/phpunit": "~10",
        "ext-xdebug": "*"
    },
    "autoload":{
        "psr-4":{
            "queasy\\helper\\": "src/"
        }
    },
    "autoload-dev":{
        "psr-4":{
            "queasy\\helper\\tests\\": "tests/src/"
        }
    },
    "scripts": {
        "test": "XDEBUG_MODE=coverage phpunit --coverage-clover coverage.xml"
    }
}

